/dts-v1/;

/ {
	model = "Jailhouse cell on NVIDIA Jetson TK1";

	#address-cells = <1>;
	#size-cells = <1>;

	interrupt-parent = <&gic>;

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			compatible = "arm,cortex-a15";
			device_type = "cpu";
			reg = <0>;
		};
	};

	memory@0 {
		device_type = "memory";
		reg = <0x40000000 0x07ef0000>;
	};

	gic: interrupt-controller@50041000 {
		compatible = "arm,cortex-a7-gic", "arm,cortex-a15-gic";
		reg = <0x50041000 0x1000>,
		      <0x50042000 0x1000>;
		interrupt-controller;
		#interrupt-cells = <3>;
	};

	timer {
		compatible = "arm,armv7-timer";
		interrupts = <0x1 0xd 0xf08>,
			     <0x1 0xe 0xf08>,
			     <0x1 0xb 0xf08>,
			     <0x1 0xa 0xf08>;
		interrupt-parent = <&gic>;
	};

	serial@0,70006300 {
		compatible = "nvidia,tegra124-uart", "nvidia,tegra20-uart";
		reg = <0x70006300 0x40>;
		reg-shift = <2>;
		interrupts = <0x0 90 0x4>;
		clock-frequency = <408000000>;
		status = "okay";
		interrupt-parent = <&gic>;
	};
};
